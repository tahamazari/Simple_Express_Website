extends layout

block content
 .container
  form(method='post' action='contact/send')
   h1 Contact
   .form-group
    label Name
    input.form-control(type="text", name='name',place-holder='Enter Name')
   .form-group
    label Email
    input.form-control(type="email",name='email', place-holder='Enter Email')
   .form-group
    label Message
    textarea.form-control(type="message",name='message', place-holder='Type message')
   button.btn.btn-default(type="submit") Submit
